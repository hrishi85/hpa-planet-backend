{
  "kind": "collectionType",
  "collectionName": "tracks",
  "info": {
    "singularName": "track",
    "pluralName": "tracks",
    "displayName": "Track",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "albumName": {
      "type": "string",
      "maxLength": 64,
      "minLength": 2
    },
    "trackTitle": {
      "type": "string",
      "required": true,
      "maxLength": 64,
      "minLength": 1
    },
    "releaseDate": {
      "type": "datetime"
    },
    "banner": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "artist": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 2
    },
    "trackLink": {
      "type": "string",
      "required": true,
      "maxLength": 256,
      "minLength": 5
    }
  }
}
